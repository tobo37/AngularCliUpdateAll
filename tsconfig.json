{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "target": "ES2020",
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "rootDir": "./src",
    "noImplicitAny": false,
    "resolveJsonModule": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "**/.spec./*"]
}
